        @{
            var jsonString = ViewBag.Shop;
            JavaScriptSerializer jsonSerializer = new JavaScriptSerializer();
            var items = jsonSerializer.Deserialize<List<Product>>(jsonString);
        }
        <div class="col-md-9">
            <div class="card-deck" id="cardDeck">
                <div class="row">
                    <div class="container">
                        @if (items != null)
                        {
                            @foreach (var item in items)
                            {
                                <div class="col-md-4 card-space ">
                                    <div class="flip-box">
                                        <div class="flip-box-inner">
                                            <div class="flip-box-front">
                                                <img class="card-img-top" src="@item.ImgUrl" alt="Card image cap">
                                                <div class="card-body mt-4 mr-1">
                                                    <h4 class="card-title"><a style="color:white">@item.Name</a></h4>
                                                    <div class="dropdown-divider"></div>
                                                    <p class="card-text" style="color:white">Price: @item.Price</p>
                                                </div>
                                            </div>
                                            <a asp-action="Product">
                                                <div class="flip-box-back" style="font-size: 30px; font-family: Impact;"> <br /><br /><br /><br />KUPI ODMAH!</div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <a>TRENUTNO NEMA PROIZVODA U ŠOPU</a>
                        }
                    </div>
