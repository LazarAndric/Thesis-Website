@model OrderModel
@{
    ViewData["Title"] = "Order";
}

    <div class="container font-sajt" style="background-color:white">
        @if (ViewBag.Token != String.Empty)
        {
            <div class="text-center" style="margin-top:95px;">
                <hr />
                <h1 style="font-size:2em">Porucivanje</h1>
            </div>

            @if (Model.User.Adress == null && Model.User.AdressNumber == null && Model.User.Place == null && Model.User.Contry == null && Model.User.PostalCode == null && Model.User.PhoneNumber == null)
            {
                <form method="post" asp-controller="Account" asp-action="Order">
                    <input type="hidden" asp-for="User.FirstName" value="@Model.User.FirstName" />
                    <input type="hidden" asp-for="User.LastName" value="@Model.User.LastName" />
                    <input type="hidden" asp-for="User.EMail" value="@Model.User.EMail" />
                    <input type="hidden" asp-for="User.Password" value="@Model.User.Password" />
                    <input type="hidden" asp-for="User.DateOfBirth" value="@Model.User.DateOfBirth" />
                    <input type="hidden" asp-for="User.GenderId" value="@Model.User.GenderId" />
                    <hr />
                    <br /><br />
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Potrebno je uneti podatke koje niste uneli prilikom registracije</h6>
                            @if (Model.User.Adress == null)
                            {
                                <div class="form-group">
                                    <label asp-for="User.Adress" class="control-label"></label>
                                    <input id="accept" asp-for="User.Adress" class="form-control" />
                                    <span asp-validation-for="User.Adress" class="text-danger"></span>
                                </div>
                            }
                            @if (Model.User.AdressNumber == null)
                            {
                                <div class="form-group">
                                    <label asp-for="User.AdressNumber" class="control-label"></label>
                                    <input id="accept" asp-for="User.AdressNumber" class="form-control" />
                                    <span asp-validation-for="User.AdressNumber" class="text-danger"></span>
                                </div>
                            }
                            @if (Model.User.Place == null)
                            {
                                <div class="form-group">
                                    <label asp-for="User.Place" class="control-label"></label>
                                    <input id="accept" asp-for="User.Place" class="form-control" />
                                    <span asp-validation-for="User.Place" class="text-danger"></span>
                                </div>
                            }
                            @if (Model.User.Contry == null)
                            {
                                <div class="form-group">
                                    <label asp-for="User.Contry" class="control-label"></label>
                                    <input id="accept" asp-for="User.Contry" class="form-control" />
                                    <span asp-validation-for="User.Contry" class="text-danger"></span>
                                </div>
                            }
                            @if (Model.User.PostalCode == null)
                            {
                                <div class="form-group">
                                    <label asp-for="User.PostalCode" class="control-label"></label>
                                    <input id="accept" asp-for="User.PostalCode" class="form-control" />
                                    <span asp-validation-for="User.PostalCode" class="text-danger"></span>
                                </div>
                            }
                            @if (Model.User.PhoneNumber == null)
                            {
                                <div class="form-group">
                                    <label asp-for="User.PhoneNumber" class="control-label"></label>
                                    <input id="accept" asp-for="User.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                                </div>
                            }
                            <div>
                                <input type="submit" value="Sacuvaj" />
                            </div>
                        </div>
                    </div>
                </form>
            }
            <hr />
            <form asp-action="SendMail" method="get">
                <div class="row">
                    <div class="col-md-8">
                        <p>SADRZAJ KORPE</p>
                        <div class="show-cart table-responsive text-nowrap center" align="left"></div>
                    </div>
                    <div class="col-md-4" style="font-size:20px">
                        <p>UKUPNA CENA: </p>
                        <span class="total-cart"></span> din
                       
                        <input type="submit" value="Kupi" />
                    </div>
                </div>
            </form>
          
        }
        else
        {
            <partial name="Login" />
        }
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

    </div>



       
