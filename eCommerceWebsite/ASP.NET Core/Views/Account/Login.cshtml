@page
@model User
@{
}

<div class="container">
    <div class="text-center" style="margin-top:95px;">
        <hr />
        <h1 style="font-size:2em">Logovanje</h1>
    </div>
    <hr />
</div>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <section>
                <form id="account" method="post">
                    <h4></h4>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EMail"></label>
                        <input asp-for="EMail" class="form-control" />
                        <span asp-validation-for="EMail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Lozinka</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Logovanje</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Zaboravljena lozinka?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@User">Registracija novog korisnika</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>