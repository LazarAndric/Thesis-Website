@page
@model LoginUserModel

@{
    ViewData["Title"] = "Log in";
}

    <div class="container font-sajt" style="background-color:white">
        <div class="text-center" style="margin-top:95px;">
            <hr />
            <h1 style="font-size:2em">Logovanje</h1>
        </div>
        <hr />
        <br />
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <section>
                        <form id="account" method="post">
                            <h4></h4>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Lozinka</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Logovanje</button>
                            </div>
                            <div class="form-group">
                                <p>
                                    <button type="button" data-toggle="modal" data-target="#exampleModal">Zaboravljena lozinka?</button>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@User">Registracija novog korisnika</a>
                                </p>
                            </div>
                        </form>
                        <br />
                        
                    </section>
                </div>
            </div>
        </div>        
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
