@page
@model Undergraduate_thesis.RegistracijaModel
@{
    ViewData["Title"] = "Registracija";
}

<div class="container">
    <br /><br />
    <div class="text-center">
        <h1 class="display-4">Registruj se</h1>
    </div>
    <hr />
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <header class="card-header">
                <a href="" class="float-right btn btn-outline-primary mt-1" data-toggle="modal" data-target="#myModal">Prijavite se</a>
                <h4 class="card-title mt-2">Registrujte se</h4>
            </header>
            <article class="card-body">
                <form>
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Ime </label>
                            <input type="text" class="form-control" placeholder="">
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <label>Prezime</label>
                            <input type="text" class="form-control" placeholder=" ">
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row end.// -->
                    <div class="form-group">
                        <label>Email adresa</label>
                        <input type="email" class="form-control" placeholder="">
                        <small class="form-text text-muted">Nikada nećemo deliti Vašu email adresu nisakim</small>
                    </div> <!-- form-group end.// -->
                    <div class="form-group">
                        <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" value="option1">
                            <span class="form-check-label"> Muško </span>
                        </label>
                        <label class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" value="option2">
                            <span class="form-check-label"> Žensko</span>
                        </label>
                    </div> <!-- form-group end.// -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Grad</label>
                            <input type="text" class="form-control">
                        </div> <!-- form-group end.// -->
                        <div class="form-group col-md-6">
                            <label>Zemlja</label>
                            <select id="inputState" class="form-control">
                                <option> Izaberi...</option>
                                <option>Hrvatska</option>
                                <option>Crna Gora</option>
                                <option selected="">Srbija</option>
                                <option>Bosna i Hercegovina</option>
                            </select>
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row.// -->
                    <div class="form-group">
                        <label>Napravi šifru</label>
                        <input class="form-control" type="password">
                    </div> <!-- form-group end.// -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Registruj  </button>
                    </div> <!-- form-group// -->
                    <small class="text-muted">Pristikom na dugme 'Registruj' dugme,  vi potvrdjujete da prihvatate  <br>  Uslove korišćenja i Pravila o privatnosti.</small>
                </form>
            </article> <!-- card-body end .// -->
            <div class="border-top card-body text-center">Imate nalog? <a href="" data-toggle="modal" data-target="#myModal">Prijavi se</a></div>
        </div> <!-- card.// -->
    </div> <!-- col.//-->

</div> <!-- row.//-->


